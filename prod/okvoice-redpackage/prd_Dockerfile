FROM openjdk:8u181-jre
MAINTAINER  pascall zhangjie@pascall.xyz

ENV PROFILES_ACTIVE admin-dev
COPY target/okvoicebiz.jar /app.jar
RUN echo "Asia/Shanghai" > /etc/timezone
VOLUME /logs
EXPOSE  8001
EXPOSE  5005
CMD java -jar -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005 -XX:+UseG1GC /app.jar --spring.profiles.active=$PROFILES_ACTIVE