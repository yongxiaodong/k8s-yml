FROM openjdk:8u181-jre
MAINTAINER  pascall zhangjie@pascall.xyz

ENV PROFILES_ACTIVE prod
COPY target/okvoice-task-0.0.1.jar /app.jar
RUN echo "Asia/Shanghai" > /etc/timezone
VOLUME /logs
EXPOSE 6666
EXPOSE 5005
CMD java -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005 -XX:+UseG1GC -jar /app.jar --spring.profiles.active=$PROFILES_ACTIVE
